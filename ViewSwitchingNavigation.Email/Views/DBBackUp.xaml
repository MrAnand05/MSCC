             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="750">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/MSCC;component/Resources/background.png"  Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid>
            <Button Content="Select Location" HorizontalAlignment="Left" Margin="80,55,0,0" VerticalAlignment="Top" Width="135" Click="Button_Click" Height="30"/>
            <TextBox x:Name="txtLocation" IsEnabled="False" HorizontalAlignment="Left" Height="28" Margin="240,55,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="440"/>
            <Button Content="BackUp" HorizontalAlignment="Left" Margin="243,100,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        </Grid>
    </Grid>
</UserControl>
